{
  "name": "nwjs-launcher",
  "main": "nwjs-launcher.html",
  "description": "Dynamic NW.js Launcher",
  "version": "1.0.0",
  "nodejs": true,
  "node-remote": ["<all_urls>", "file://*"],
  "window": {
    "title": "NW.js Launcher",
    "fullscreen": false,
    "kiosk": false,
    "frame": false,
    "toolbar": false,
    "show": true,
    "position": "center"
  },
  "chromium-args": "--allow-file-access-from-files"
}
